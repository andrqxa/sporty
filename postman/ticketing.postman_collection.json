  "item": [
    {
      "name": "Create Ticket",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{baseUrl}}/tickets", "host": ["{{baseUrl}}"], "path": ["tickets"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"user-001\",\n  \"subject\": \"Login not working\",\n  \"description\": \"I can't sign in\"\n}"
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save ticketId to environment",
              "let json = pm.response.json();",
              "pm.environment.set('ticketId', json.ticketId);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Assign Ticket",
      "request": {
        "method": "PATCH",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{baseUrl}}/tickets/{{ticketId}}/assign",
          "host": ["{{baseUrl}}"],
          "path": ["tickets", "{{ticketId}}", "assign"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"assigneeId\": \"agent-123\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Update Status",
      "request": {
        "method": "PATCH",
